<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232323"
    tools:context=".menu">

    <Button
        android:id="@+id/endless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="endless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="level one"
        android:textColor="#B3B3B3"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/endless" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/lvl1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="1"></Button>

            <Button
                android:id="@+id/lvl2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="2"></Button>

            <Button
                android:id="@+id/lvl3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="3"></Button>

            <Button
                android:id="@+id/lvl4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="4"></Button>

            <Button
                android:id="@+id/lvl5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="5"></Button>


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/lvl6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="6"></Button>

            <Button
                android:id="@+id/lvl7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="7"></Button>

            <Button
                android:id="@+id/lvl8"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="8"></Button>

            <Button
                android:id="@+id/lvl9"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="9"></Button>

            <Button
                android:id="@+id/lvl10"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/linia"
                android:onClick="Klik"
                android:text="10"></Button>
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/endless2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="endless v2"
        app:layout_constraintStart_toStartOf="@+id/endless"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>